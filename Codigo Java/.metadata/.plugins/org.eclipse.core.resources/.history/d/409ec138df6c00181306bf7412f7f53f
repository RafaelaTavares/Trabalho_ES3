	//Fim declarações
		
	public CadastrarCliente(){
		this.setSize(470, 305);
		this.setTitle("Cadastro de Cliente");
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		this.setLocationRelativeTo(null);
		addComponents();	
	}
	
